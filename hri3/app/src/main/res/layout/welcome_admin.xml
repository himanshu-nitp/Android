<TableLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TableRow
        android:background="@drawable/text_box_underline">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/wciv"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/jerry"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="16dp"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/wttv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Welcome Home"
                    android:textSize="45sp"
                    android:padding="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wab1"
        android:text="View All Clients"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:background="#cf354c"
        android:textColor="#fff"
        android:layout_marginHorizontal="10dp"
        android:onClick="viewAllClient"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wab2"
        android:text="View All Trainers"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:background="#b31cb0"
        android:textColor="#fff"
        android:layout_marginHorizontal="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/wab3"
            android:text="Add Blog"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:background="#17a4ab"
            android:textColor="#fff"
            android:layout_marginHorizontal="5dp"
            android:onClick="addBlog"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/wab4"
            android:text="View Blogs"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:background="#17a4ab"
            android:textColor="#fff"
            android:layout_marginHorizontal="5dp"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wab5"
        android:text="Add Ads"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:background="#4cb31c"
        android:textColor="#fff"
        android:paddingHorizontal="90dp"
        android:layout_marginHorizontal="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wab6"
        android:text="Logout"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:background="#317fad"
        android:textColor="#fff"
        android:paddingHorizontal="90dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="logout"/>



</TableLayout>
